<?xml version="1.0" encoding="UTF-8"?>
<orch xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="orch.xsd">
    <pon>
        <!-- PON 地属代码对照表 value:PON地属代码 , cityCode:平台地市代码 -->
        <areaCodes>
            <areaCode value="0001" cityCode="3" comment="南京" />
            <areaCode value="0002" cityCode="20" comment="苏州" />
            <areaCode value="0003" cityCode="15" comment="无锡" />
            <areaCode value="0004" cityCode="69" comment="常州" />
            <areaCode value="0005" cityCode="4" comment="镇江" />
            <areaCode value="0006" cityCode="33" comment="扬州" />
            <areaCode value="0007" cityCode="26" comment="南通" />
            <areaCode value="0008" cityCode="79" comment="泰州" />
            <areaCode value="0009" cityCode="48" comment="徐州" />
            <areaCode value="0010" cityCode="60" comment="淮安" />
            <areaCode value="0011" cityCode="39" comment="盐城" />
            <areaCode value="0012" cityCode="63" comment="连云港" />
            <areaCode value="0013" cityCode="84" comment="宿迁" />
        </areaCodes>
        <!--PON业务带宽值对照表：value：带宽业务值，code：对应code码-->
        <bandwidths>
            <bandwidth code="18" value="100"/>
            <bandwidth code="6" value="10"/>
            <bandwidth code="8" value="20"/>
            <bandwidth code="13" value="50"/>
        </bandwidths>
    </pon>

    <ipran>
        <!--IPRAN业务带宽值对照表：value：带宽业务值，code：对应code码-->
        <bandwidths>
            <bandwidth code="18" value="100"/>
            <bandwidth code="6" value="10"/>
            <bandwidth code="38" value="1000"/>
            <bandwidth code="21" value="200"/>
            <bandwidth code="8" value="20"/>
            <bandwidth code="23" value="300"/>
            <bandwidth code="10" value="30"/>
            <bandwidth code="25" value="400"/>
            <bandwidth code="12" value="40"/>
            <bandwidth code="27" value="500"/>
            <bandwidth code="13" value="50"/>
            <bandwidth code="29" value="600"/>
            <bandwidth code="14" value="60"/>
            <bandwidth code="32" value="700"/>
            <bandwidth code="15" value="70"/>
            <bandwidth code="34" value="800"/>
            <bandwidth code="16" value="80"/>
            <bandwidth code="36" value="900"/>
            <bandwidth code="17" value="90"/>
        </bandwidths>
    </ipran>
    <!-- 转换器 -->
    <filters>
        <!-- 全角逗号，全角分号，半角分号 全部转换为 半角逗号 -->
        <replace id="fakeArray">
            <from>，</from>
            <from>；</from>
            <from>;</from>
            <to>,</to>
        </replace>
    </filters>

    <!-- 专线参数定义表 -->
    <vpn>
        <!-- 天翼云 IPRAN 专线 -->
        <define cloud="CTYUN" type="IPRAN" action="CREATE">
            <!-- 字段定义， name字段两端空格会视为无效内容 -->
            <property name="net_name" type="string"  />
            <property name="group_serialno" type="string"  />
            <property name="member_serialno" type="string"  />
            <property name="line_name" type="string" optional="true" />
            <property name="line_no" type="string" optional="true" />
            <property name="business_bw" type="int" limit="positive" />
            <property name="old_business_bw" type="int" limit="positive" optional="true"/>
            <property name="fz_type" type="int"  />
            <property name="Aupequ1_ip" type="string" optional="true" />
            <property name="Aupequ1_port" type="string" optional="true" />
            <property name="Aupequ1_opticalno" type="string" optional="true" />
            <property name="Aupequ2_ip" type="string" optional="true" />
            <property name="Aupequ2_port" type="string" optional="true" />
            <property name="Aupequ2_opticalno" type="string" optional="true" />
            <property name="device_name" type="string" optional="true" />
            <property name="device_type" type="string"  />
            <property name="device_address" type="string"  />
            <property name="cluster_name" type="string"  />
            <property name="device_cityid" type="int"  />
            <property name="device_ip" type="string"  />
            <property name="loopback_ip" type="string" optional="true" />
            <property name="locallink1_ip" type="string" optional="true" />
            <property name="locallink2_ip" type="string" optional="true" />
            <property name="device_port" type="string"  />
            <property name="device_vlan" type="int" optional="true"/>
            <property name="uplink1_ip" type="string" optional="true" />
            <property name="uplink2_ip" type="string" optional="true" />
            <property name="dc_device_address" type="string" optional="true" />
            <property name="dc_device_cityid" type="string" optional="true" />
            <property name="dc_device_type" type="string" optional="true" />
            <property name="z_vlan" type="int"  />
            <property name="user_addr_seg" type="string" filter="fakeArray"  />
            <property name="user_addr_seg_mask" type="string" filter="fakeArray"  />
            <property name="user_link_ip" type="string"  />
            <property name="user_link_mask" type="string"  />
            <property name="deviceId" type="string"  />
            <property name="interfaceName" type="string"  />
            <property name="portType" type="string"  />
            <property name="ctyunEmail" type="string" />
            <property name="asbr1" type="string" optional="true" />
            <property name="asbr1_port" type="string"  />
            <property name="asbr1_ip" type="string"  />
            <property name="asbr1_rate" type="string" optional="true" />
            <property name="asbr2" type="string" optional="true" />
            <property name="asbr2_port" type="string"  />
            <property name="asbr2_ip" type="string"  />
            <property name="asbr2_rate" type="string" optional="true" />
        </define>
        <!--变更-->
        <define cloud="CTYUN" type="IPRAN" action="MODIFY">
            <!-- 字段定义， name字段两端空格会视为无效内容 -->
            <property name="member_serialno" type="string"  />
            <property name="business_bw" type="int" limit="positive" />
            <property name="old_business_bw" type="int" limit="positive" />
            <property name="user_addr_seg" type="string" filter="fakeArray"  />
            <property name="old_user_addr_seg" type="string" filter="fakeArray"  />
            <property name="user_addr_seg_mask" type="string" filter="fakeArray"  />
            <property name="old_user_addr_seg_mask" type="string" filter="fakeArray"  />
        </define>

        <!--拆机-->
        <define cloud="CTYUN" type="IPRAN" action="RELEASE">
            <!-- 字段定义， name字段两端空格会视为无效内容 -->
            <property name="member_serialno" type="string"  />
        </define>

        <!-- 天翼云 PONVLL 专线  -->
        <define cloud="CTYUN" type="PON" action="CREATE">
            <property name="area_code" type="string" optional="true" />
            <property name="olt_code" type="string" />
            <property name="olt_ip" type="string" />
            <property name="olt_port" type="string" />
            <property name="max_downlink_bw" type="int" limit="positive"/>
            <property name="old_max_downlink_bw" type="int" limit="positive" optional="true"/>
            <property name="max_uplink_bw" type="int" limit="positive"/>
            <property name="old_max_uplink_bw" type="int" limit="positive" optional="true"/>
            <property name="user_count" type="string" optional="true" />
            <property name="svlan" type="int" />
            <property name="cvlan" type="int" />
            <property name="z_vlan" type="int" />
            <property name="user_addr_seg" type="string" filter="fakeArray" />
            <property name="user_addr_seg_mask" type="string" filter="fakeArray" />
            <property name="user_link_ip" type="string" />
            <property name="user_link_mask" type="string" />
            <property name="deviceId" type="string" />
            <property name="interfaceName" type="string" />
            <property name="portType" type="string" />
            <property name="ctyunEmail" type="string" />
            <property name="device_address" type="string" />
            <property name="asbr1" type="string" optional="true" />
            <property name="asbr1_port" type="string" />
            <property name="asbr1_ip" type="string" />
            <property name="asbr1_rate" type="string" optional="true" />
            <property name="asbr2" type="string" optional="true" />
            <property name="asbr2_port" type="string" />
            <property name="asbr2_ip" type="string" />
            <property name="asbr2_rate" type="string" optional="true" />
        </define>

        <!--变更-->
        <define cloud="CTYUN" type="PON" action="MODIFY">
            <property name="max_downlink_bw" type="int" limit="positive"/>
            <property name="old_max_downlink_bw" type="int" limit="positive" optional="true"/>
            <property name="max_uplink_bw" type="int" limit="positive"/>
            <property name="old_max_uplink_bw" type="int" limit="positive" optional="true"/>
            <property name="user_addr_seg" type="string" filter="fakeArray" />
            <property name="old_user_addr_seg" type="string" filter="fakeArray" />
            <property name="user_addr_seg_mask" type="string" filter="fakeArray" />
            <property name="old_user_addr_seg_mask" type="string" filter="fakeArray" />
        </define>
    </vpn>
</orch>
